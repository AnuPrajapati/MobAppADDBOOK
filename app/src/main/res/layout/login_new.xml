<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">


    <!--<com.shiva.threeinkdirectory.view.CircularImageView-->
        <!--android:id="@+id/circleimage"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_marginTop="30dp"-->
        <!--android:layout_marginBottom="20dp"-->
        <!--android:padding="20dp"-->
         <!--/>-->

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_person_white"
        android:drawablePadding="10dp"
        android:focusable="auto"
        android:hint="Username"
        android:paddingLeft="15dp"
      android:inputType="textEmailAddress"
        android:textColor="#F6FAF6"
        android:textColorHint="#F6FAF6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#AAAAAA" />

    <EditText

        android:id="@+id/password"
android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_lock_white"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:text=""
        android:textColor="#F6FAF6"
        android:textColorHint="#F6FAF6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#AAAAAA" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="LOGIN WITH"

        android:textColor="#F6FAF6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <com.facebook.login.widget.LoginButton xmlns:facebook="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"

            facebook:com_facebook_login_text="Facebook"

            />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_button"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />


    </LinearLayout>


        <Button
            android:id="@+id/memberlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/memberlogin_selector"
            android:text="MemberLogin" />



    <TextView
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Create a new Account"
        android:textColor="#F6FAF6" />


</LinearLayout>

